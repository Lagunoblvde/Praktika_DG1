<Page x:Class="praktika.Tretya_Stranica"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tretya_Stranica">

    <Grid>
        <DataGrid x:Name="Tablica_GoodTeg" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="3" SelectionChanged="Tablica_GoodTeg_SelectionChanged"/>
        <TextBox x:Name="GoodTeg_Insert" HorizontalAlignment="Left" Margin="10,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="26"/>
        <Button x:Name="Insert_tretya" Content="Добавить" HorizontalAlignment="Left" Margin="571,162,0,0" VerticalAlignment="Top" Width="181" Height="29" Click="Insert_tretya_Click"/>
        <Button x:Name="Update_tretya" Content="Изменить" HorizontalAlignment="Left" Margin="571,196,0,0" VerticalAlignment="Top" Width="181" Height="29" Click="Update_tretya_Click"/>
        <Button x:Name="Delete_tretya" Content="Удалить" HorizontalAlignment="Left" Margin="571,230,0,0" VerticalAlignment="Top" Width="181" Height="29" Click="Delete_tretya_Click"/>
    </Grid>
</Page>
